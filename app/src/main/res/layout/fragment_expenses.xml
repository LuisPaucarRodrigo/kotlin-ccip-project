<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".ui.expenses.ExpensesFragment">

    <LinearLayout
        android:id="@+id/formPreproject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">


        <include
            android:id="@+id/options"
            layout="@layout/scroolbar_expenses" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/qanelabolt"
            android:paddingVertical="5dp"
            android:text="Gastos"
            android:textColor="@color/txtTitle"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/qanelalight"
                android:gravity="center"
                android:text="Zona"
                android:textColor="@color/azulccip"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/zone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/qanelalight"
                android:gravity="center"
                android:text="Tipo de Gasto"
                android:textColor="@color/azulccip"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/typeExpense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/qanelalight"
                android:gravity="center"
                android:text="RUC "
                android:textColor="@color/azulccip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtRuc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:inputType="number"
                android:maxLength="11"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/qanelalight"
                android:gravity="center"
                android:text="Tipo de Documento"
                android:textColor="@color/azulccip"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/typeDocument"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/qanelalight"
                android:gravity="center"
                android:text="Nro. de Documento "
                android:textColor="@color/azulccip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtNumberDocument"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:fontFamily="@font/qanelalight"
                android:gravity="center"
                android:text="Fecha de Documento "
                android:textColor="@color/azulccip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtDateDocument"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:focusable="false"
                android:hint="Seleccionar fecha"
                android:inputType="date"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/qanelalight"
                android:gravity="center"
                android:text="Foto de Documento "
                android:textColor="@color/azulccip"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDocumentPhoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:backgroundTint="@color/azulccip"
                android:textColor="@color/white"
                android:fontFamily="@font/qanelabolt"
                android:text="Subir foto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:fontFamily="@font/qanelalight"
                android:gravity="center"
                android:text="Monto Total "
                android:textColor="@color/azulccip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:inputType="numberDecimal"
                android:maxLength="8"
                android:maxLines="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:fontFamily="@font/qanelalight"
                android:gravity="center"
                android:text="Descripcion "
                android:textColor="@color/azulccip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:inputType="text"
                android:maxLines="1"
                android:text="" />
        </LinearLayout>

        <include
            android:id="@+id/send"
            layout="@layout/component_send" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cameraPreproject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/closeCamera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertical_centerline"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:background="@android:color/transparent"
            android:elevation="2dp"
            android:src="@drawable/baseline_close_24" />

        <ImageButton
            android:id="@+id/captureButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/vertical_centerline"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="50dp"
            android:background="@android:color/transparent"
            android:elevation="2dp"
            android:src="@drawable/baseline_camera_24" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_centerline"
            app:layout_constraintGuide_percent=".50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>